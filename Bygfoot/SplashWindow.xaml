<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Bygfoot.SplashWindow"
        Title="AvaloniaAppTemplate"
        Width="550" Height="600" WindowStartupLocation="CenterScreen">

    <Viewbox Padding="3">
        <TabControl>
            <TabItem Header="">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Image goes here" />
                    <TextBlock Text="{Binding HintText}" />
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Prev" Command="{Binding PrevButtonClicked}"/>
                        <Button Content="Next" Command="{Binding NextButtonClicked}"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Contributors">
            </TabItem>
        </TabControl>
    </Viewbox>

</Window>